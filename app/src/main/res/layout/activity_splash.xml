<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash_screen.SplashActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/hundred_twenty_dp"
        android:layout_height="@dimen/hundred_fifty_dp"
        android:layout_marginTop="@dimen/hundred_dp"
        android:src="@drawable/jappa_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:padding="@dimen/ten_dp"/>

    <ImageView
        android:id="@+id/app_name_imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seventy_dp"
        android:layout_marginTop="@dimen/forty_dp"
        android:src="@drawable/ic_app_name_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:background="@color/white"
        android:padding="@dimen/ten_dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>